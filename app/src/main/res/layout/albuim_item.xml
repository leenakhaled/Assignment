<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:layout_margin="20dp"
        android:clickable="true"
        android:id="@+id/album_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/album_image"
        android:contentDescription="todo"
        android:focusable="true" />
    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/album_image"
        android:layout_alignTop="@id/album_image"
        android:layout_alignRight="@id/album_image"
        android:layout_alignBottom="@id/album_image"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#000000"
        android:layout_alignStart="@id/album_image"
        android:layout_alignEnd="@id/album_image" />

</RelativeLayout>

